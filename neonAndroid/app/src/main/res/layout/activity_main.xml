<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg"
    android:orientation="vertical"
    android:foregroundGravity="center"
    tools:context=".MainActivity">

    <com.andrecotrim.neonmobile.components.NeonCatamaramBoldTextView
        android:id="@+id/splash_text_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Informe o IP do servidor, para efetuarmos a conexão:"
        android:textColor="@color/cardview_light_background"
        android:textSize="18dp"
        android:layout_weight="0.5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/ip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:gravity="center"
        android:hint="IP:port(255.255.255.255:3000)"
        android:inputType="textPersonName"
        android:shadowColor="@color/cardview_light_background"
        android:text="10.0.0.102:3000"
        android:textColor="@color/cardview_light_background"
        tools:layout_editor_absoluteX="105dp"
        tools:layout_editor_absoluteY="396dp" />


    <Button
        android:id="@+id/btnStart"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:background="@drawable/button_neon"
        android:gravity="center"
        android:text="Começar"
        android:textColor="@color/cardview_light_background"
        android:layout_marginBottom="250dp"
        tools:layout_editor_absoluteX="118dp"
        tools:layout_editor_absoluteY="441dp" />

</LinearLayout>